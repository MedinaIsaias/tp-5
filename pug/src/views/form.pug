doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Formulario para agregar productos
  body
    a(href='/productos') Ver lista
    h3 Agregar Producto
    form(action="/productos" method="post")
             input(type="text" placeholder="Nombre" name="name")
             input(type="number" placeholder="Precio" name="price") 
             input(type="text" placeholder="Imagen" name="thumbnail") 
             input(type="submit" value="Cargar producto")